{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "paths": {
      "@guythomas.me/*": ["packages/*"]
    }
  }
}
